<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ys.peeraxproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
 
       <permission
        android:name="com.androidhive.pushnotifications.permission.C2D_MESSAGE"
         />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
    android:name="com.google.android.gms.version"
    android:value="@integer/google_play_services_version" />
        <activity
            android:name=".StartScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
			
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginScreenActivity" />
        <activity android:name=".FirstChoiceActivity" />
        <activity android:name=".CriteriaSelectActivity" />
        <activity android:name=".SubjectSelectActivity" />
        <activity android:name=".PriceSelectScreen" />
        <activity android:name=".HomePageActivity" />
        <activity android:name=".ProfilePageActivity" />
        <activity android:name=".ViewSubjectsActivity" />
        <activity android:name=".ProfileDegreeActivity" />
        <activity android:name=".ProfileAboutActivity" />
        
        <activity android:name=".SettingCriteriaActivity" />
        
        <activity android:name=".SettingSubjectActivity" />
        
        <activity android:name=".GetUserActivity" />
        
        <activity android:name=".SettingStatusActivity" />
        
        <activity android:name=".SettingDegreeActivity" />
        
        <activity android:name=".SettingOptionActivity" />
        <service android:name="com.ys.peeraxproject.location.LocationService" />
        <service android:name="com.ys.peeraxproject.location.NearbyUsersService" />
        
        <receiver android:name=".location.NearbyUsersService$CoordinatesReceiver">
	      <intent-filter>
	         <action android:name="com.ys.peeraxproject.LOCATION_INTENT">
	      </action>
	      </intent-filter>
	    </receiver>
	    
        <receiver android:name=".HomePageActivity$UsersReceiver">
	      <intent-filter>
	         <action android:name="com.ys.peeraxproject.PEOPLE_INTENT">
	      </action>
	      </intent-filter>
	    </receiver>

    </application>

</manifest>