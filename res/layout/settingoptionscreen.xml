
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingbg"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/settingbubble2"
        android:text="Subject Wanted"
        android:textColor="#FFFFFFFF" />

    <Button
        
        android:textSize="20dp"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settingbubble2"
        android:text="Education Level Required"
        android:textColor="#FFFFFFFF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settingbubble3"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:gravity="center"
        android:textSize="20dp"
            android:text="Average Rating"
            android:textColor="#FFFFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="63dp"
            android:gravity="center_vertical"
            android:background="@drawable/settingbubble2"
            android:orientation="horizontal" >

            <EditText
                android:layout_marginLeft="40dp"
                android:background="@drawable/settingbubble4"
                android:layout_width="60dp"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:textSize="35sp"
                android:maxLength="1"
                android:layout_height="40dp" />

            <ImageView
                android:layout_marginLeft="40dp"
                android:background="@drawable/rightpointyarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
			<EditText
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:gravity="center"
                android:textSize="35sp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/settingbubble4"
                android:textColor="#FFFFFFFF"
                android:layout_width="50dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settingbubble3"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:gravity="center"
        android:textSize="20dp"
            android:text="PeerAX Hours"
            android:textColor="#FFFFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="63dp"
            android:gravity="center_vertical"
            android:background="@drawable/settingbubble2"
            android:orientation="horizontal" >

<TextView 
    android:layout_width="wrap_content"
    android:layout_marginLeft="40dp"
    android:textSize="20dp"
    android:text="At Least"
    android:textColor="#FFFFFFFF"
    android:layout_height="wrap_content"
    />
            <EditText
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:gravity="center"
                android:textSize="35sp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/settingbubble4"
                android:textColor="#FFFFFFFF"
                android:layout_width="60dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>