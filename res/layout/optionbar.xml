<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/optionbg1"
    tools:context="${relativePackage}.${activityClass}" >
    
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/optionpicture"/>
    
   	<TextView
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:id="@+id/optionid"
   	    android:textSize="15dp"
   	    />
   	<Button 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="homepage"
   	    
android:background="@drawable/optionbutton3"
   	    android:textSize="15dp"
   	    android:layout_marginTop="5dp"
   	    android:layout_marginBottom="5dp"
   	    android:id="@+id/optionhomebtn"
   	    />
   	
   	<Button 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="Your Profile"
   	    android:layout_marginTop="5dp"
   	    android:layout_marginBottom="5dp"
   	    android:textSize="15dp"
android:background="@drawable/optionbutton6"
   	    android:id="@+id/optionprofilebtn"
   	    />
   	<Button 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="Conversation"
android:textSize="15dp"
   	    android:layout_marginTop="5dp"
   	    android:layout_marginBottom="5dp"

android:background="@drawable/optionbutton5"
   	    android:id="@+id/optionconversationbtn"
   	    />
   	<Button 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="Session History"
   	    android:textSize="15dp"
   	    
   	    android:layout_marginTop="5dp"
   	    android:layout_marginBottom="5dp"
android:background="@drawable/optionbutton3"
   	    android:id="@+id/optionsessionbtn"
   	    />
	<Button 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="User Settings"
   	    android:textSize="15dp"
   	    android:layout_marginTop="5dp"
   	    android:layout_marginBottom="5dp"
   	    android:background="@drawable/optionbutton2"
   	    android:id="@+id/optionsetting"
   	    />

</LinearLayout>