<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgyellow">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:baselineAligned="false">"

	<LinearLayout 
	    android:layout_margin="10dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/profilepicturebg">"
	    <LinearLayout
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_horizontal"
	        >
	        <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="150dp"
	        android:id="@+id/userpicture"
                android:src="@drawable/noimage"
                android:baselineAlignBottom="false"
                android:cropToPadding="false" />
	    <Button
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="17dp"
	        android:layout_width="101dp"
	        android:layout_height="32dp"
	        android:text="Edit Picture"
	        android:textSize="12dp"
	        android:background="@drawable/profilebutton1"
	        android:id="@+id/profilepicturebtn"
            android:textColor="#ffffffff" />
	    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/profilename"
                android:textColor="#ffffffff"
                android:textSize="28dp"
                android:textIsSelectable="false"
                android:layout_marginTop="40dp"
                android:text="Username" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 4.5/5.0"
                android:id="@+id/profilerating"
                android:textColor="#ffffffff"
                android:typeface="sans"
                android:textSize="16dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peerax Hours: 22"
                android:id="@+id/profilehours"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:textColor="#ffffffff" />
        </LinearLayout>


    </LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/profiletextbg"
	    android:orientation="vertical"
	    
	    android:id="@+id/profilebubble1"
	    android:layout_margin="10dp"
	    >
	<LinearLayout
	     	android:layout_margin="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="right"
        android:weightSum="1">
	     <TextView
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
                android:text="About You:"
                android:textColor="#ffffffff"
                android:layout_gravity="top"
                android:textSize="18dp"
                android:layout_weight="0.96" />
	    <Button
	        android:layout_width="103dp"
	        android:layout_height="22dp"
	        android:background="@drawable/profilebutton2"
	        
	        android:text="Edit / Add"
	        android:id="@+id/profileaboutbtn"
            android:textColor="#ffffffff"
            android:textSize="12dp" />
	    </LinearLayout>
	<TextView
	    android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginLeft="5dp"
		android:id="@+id/profileabouttext"
        android:textColor="#ffffffff"
        android:textSize="16dp" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/profiletextbg"
	    android:layout_margin="10dp"
	    android:orientation="vertical">
	    
	 <LinearLayout
	     android:layout_margin="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="right"
	        >
         <TextView
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="Can Offer Help On:"
             android:textColor="#ffffffff"
             android:layout_gravity="top"
             android:textSize="18dp"
             android:layout_weight="0.96" />
         <Button
             android:layout_width="103dp"
             android:layout_height="22dp"
             android:background="@drawable/profilebutton2"

             android:text="Edit / Add"
             android:id="@+id/profilesubjectbtn"
             android:textColor="#ffffffff"
             android:textSize="12dp" />
	    </LinearLayout>
	   <TextView
	       android:id="@+id/profilesubject"
	       android:layout_height="50dp"
	       android:layout_width="fill_parent"
	       android:layout_marginLeft="5dp"

           android:textSize="16dp"
           android:textColor="#ffffffff" />
	   
	   </LinearLayout>
	   
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/profiletextbg"
	    android:layout_margin="10dp"
	    android:orientation="vertical">
	   <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_margin="5dp"
	        android:gravity="right"
	        >
           <TextView
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Your Education Level"
               android:textColor="#ffffffff"
               android:layout_gravity="top"
               android:textSize="18dp"
               android:layout_weight="0.96" />
           <Button
               android:layout_width="103dp"
               android:layout_height="22dp"
               android:background="@drawable/profilebutton2"

               android:text="Edit / Add"
               android:id="@+id/profileeducationbtn"
               android:textColor="#ffffffff"
               android:textSize="12dp" />
	    
	    </LinearLayout>
	    <TextView
	       android:id="@+id/profileeducation"
	       android:layout_height="50dp"
	       android:layout_marginLeft="5dp"
	       android:layout_width="fill_parent"

            android:textColor="#ffffffff"
            android:textSize="16dp" />
	    </LinearLayout>
</LinearLayout>
</ScrollView>
